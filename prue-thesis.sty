% |                 Table of contents                |
% +--------------------------------------------------+
% Depth of ToC: 1 is chapter, 2 is subsection, etc.
\setcounter{tocdepth}{2}

\usepackage{tocloft}
% Dots separator for sections and their interval
\renewcommand\cftsecdotsep{4.5}
% Line space between sections
\setlength{\cftbeforesecskip}{0pt}

% Links in ToC
\usepackage[hidelinks]{hyperref}

% +--------------------------------------------------+
% |                 Titles (headers)                 |
% +--------------------------------------------------+
\usepackage{titlesec}

% Format and spacing of section
\titleformat{\section}
    [block]                         % no indentation
    {\Large\bfseries\filcenter}     % format
    {Глава \thesection. }           % label
    {0em}                           % sep
    {}                              % before
\titlespacing{\section}
    {0pt}       % left
    {18pt}      % beforesep
    {18pt}      % aftersep

% Format and spacing of section
\titleformat{\subsection}
    [block]                         % no indentation
    {\large\bfseries\filcenter}     % format
    {\thesubsection. }              % label
    {0em}                           % sep
    {}                              % before
\titlespacing{\subsection}
    {0pt}       % left
    {18pt}      % beforesep
    {18pt}      % aftersep

